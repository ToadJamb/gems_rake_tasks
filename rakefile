require 'cane'
require 'gems'

require_relative 'lib/rake_tasks'
[
  'cane',
  'doc',
  'gem',
  'rdoc',
  'spec',
  'test',
  'checksum',
  'console',
].each do |task|
  require_relative File.join('lib/rake_tasks/tasks', task)
end

$VERBOSE = true

task :default
Rake::Task[:default].clear_prerequisites

task :default => [
  'cane:quality',
  :specs,
  'test:all',
]
