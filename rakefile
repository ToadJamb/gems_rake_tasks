require 'cane'
require 'gems'
require 'travis/yaml' if RUBY_VERSION.match(/\d+/).to_s.to_i > 1
require 'wwtd/tasks'

require_relative 'lib/rake_tasks'
[
  'cane',
  'doc',
  'gem',
  'rdoc',
  'spec',
  'test',
  'checksum',
  'console',
  'travis_ci_lint',
].each do |task|
  require_relative File.join('lib/rake_tasks/tasks', task)
end

$VERBOSE = true

task :default
Rake::Task[:default].clear_prerequisites

defaults = []
defaults << 'travis_ci:lint' if Kernel.const_defined?('Travis')
defaults << 'cane:quality'
defaults << :specs
defaults << 'test:all'

task :default => defaults
